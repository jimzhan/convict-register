{
  "name": "convict-register",
  "version": "0.3.0",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "npx lint-staged",
    "commit": "git add . && npx git-cz",
    "commitmsg": "npx commitlint -e $GIT_PARAMS",
    "lint": "npx eslint --ext .js lib",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test jest --no-cache"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "lint-staged": {
    "src/**/*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "convict": "^4.3.1",
    "cross-env": "^5.2.0",
    "require-context": "^1.1.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "lint-staged": "^7.2.0"
  }
}
